                   color: white;
                   text-align: center;
               }

               .closeBtn{
                   color: white;
                   float: right;
                   font-size: 2em;

                   padding: 0 0.2em;
               }

               @keyframes modalopen {
                   from{opacity: 0}
                   to {opacity: 1}
               }
